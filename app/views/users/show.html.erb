<h2 style="text-align:center;"><span class="highlight">Welcome to your Collect It Dashboard</span></h2>
   <% if current_user %>
      <%= form_with url: search_comics_path, method: :get, local: true do |form| %>
        <%= form.text_field :query, placeholder: "Search Comics" %>
        <%= form.submit 'Find Comics' %>
      <% end %>
    <% end %>