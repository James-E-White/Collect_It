<div style="background-image: url('/assets/images/Mixed-Comics_1024x1024@2x.jpg');">

<center><h1><% "Welcome to Collect It" %></h1>

</center>
<% if session[:user_id] %>
  <%= link_to "Log Out", "/logout" %>

  <div id='users'>
    <h2>Existing Users:</h2>
    <ul>
      <% @users.each do |user| %>
        <li><b>Name:</b> <%= user.username %><br><b>Email:</b> <%= user.email %> </li><br>
      <% end %>
    </ul>
  </div>
<% else %>
  <%= button_to "Create A New User", register_path, method: :get %>
  <%= button_to "Log In", "/login" %>
<% end %>
</div>
